<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag @recipe.image %>
</p>

<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <strong>Ingredient:</strong>
    <%= ingredient.name %>
  </p>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
