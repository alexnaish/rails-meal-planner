<p id=”alert”><%= alert %></p>
<h1>Login</h1>

<%= form_with url: sessions_path do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
  <%= form.label :password %>
  <%= form.password_field :password %>
  </div>
  <%= form.hidden_field :return_path, value: @return_path %>
  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>
