<h1>Profile!</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Created At:</strong>
  <%= @user.created_at %>
</p>

<p>
  <strong>Updated At:</strong>
  <%= @user.updated_at %>
</p>

<h2>Your Recipes!</h2>

<% @user.recipes.each do |recipe| %>
  <div>
    <p>
      <strong>Name:</strong>
      <%= recipe.name %>
    </p>
    <p>
      <strong>Ingredients:</strong>
      <%= recipe.ingredients.length %>
    </p>
    <div><%= link_to 'Show', recipe %></div>
    <div><%= link_to 'Edit', edit_recipe_path(recipe) %></div>
    <div><%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %></div>
  </div>
<% end %>
